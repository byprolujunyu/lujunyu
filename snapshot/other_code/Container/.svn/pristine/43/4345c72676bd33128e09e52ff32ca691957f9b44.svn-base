<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/topbar"
            layout="@layout/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/country"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/block_height"
                            android:layout_marginLeft="@dimen/margin_littile"
                            android:layout_marginRight="@dimen/margin_littile"
                            android:layout_marginTop="@dimen/margin_littile"
                            android:background="@drawable/round_corner_grey_border"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/margin_littile"
                            android:paddingRight="@dimen/margin_littile">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sendbuyinfo_country"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_3"/>

                            <TextView
                                android:id="@+id/country_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_littile"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="中国"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="5dp"
                                android:layout_marginLeft="@dimen/margin_littile"
                                android:src="@drawable/down"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/block_height"
                            android:layout_marginLeft="@dimen/margin_littile"
                            android:layout_marginRight="@dimen/margin_littile"
                            android:layout_marginTop="@dimen/margin_littile"
                            android:background="@drawable/round_corner_grey_border"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/margin_littile"
                            android:paddingRight="@dimen/margin_littile">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sendbuyinfo_city"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_3"/>

                            <TextView
                                android:id="@+id/city_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_littile"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:hint="@string/sendbuyinfo_city_hint"
                                android:textColorHint="@color/grey_light"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="5dp"
                                android:layout_marginLeft="@dimen/margin_littile"
                                android:rotation="270"
                                android:src="@drawable/down"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/block_height"
                            android:layout_marginLeft="@dimen/margin_littile"
                            android:layout_marginRight="@dimen/margin_littile"
                            android:layout_marginTop="@dimen/margin_littile"
                            android:background="@drawable/round_corner_grey_border"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/margin_littile"
                            android:paddingRight="@dimen/margin_littile">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="标题"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_3"/>

                            <EditText
                                android:id="@+id/editTitleName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_littile"
                                android:layout_weight="1"
                                android:background="@color/transparent"
                                android:gravity="right"
                                android:text=""
                                android:hint="请输入标题"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:inputType="text"
                                android:textColorHint="@color/grey_light"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/type"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/block_height"
                            android:layout_marginLeft="@dimen/margin_littile"
                            android:layout_marginRight="@dimen/margin_littile"
                            android:layout_marginTop="@dimen/margin_littile"
                            android:background="@drawable/round_corner_grey_border"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/margin_littile"
                            android:paddingRight="@dimen/margin_littile">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sendbuyinfo_type"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_3"/>

                            <TextView
                                android:id="@+id/type_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_littile"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:hint="@string/sendbuyinfo_type_hint"
                                android:textColorHint="@color/grey_light"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="5dp"
                                android:layout_marginLeft="@dimen/margin_littile"
                                android:src="@drawable/down"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/status"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/block_height"
                            android:layout_marginLeft="@dimen/margin_littile"
                            android:layout_marginRight="@dimen/margin_littile"
                            android:layout_marginTop="@dimen/margin_littile"
                            android:background="@drawable/round_corner_grey_border"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/margin_littile"
                            android:paddingRight="@dimen/margin_littile">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sendbuyinfo_status"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_3"/>

                            <TextView
                                android:id="@+id/status_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_littile"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:hint="@string/sendbuyinfo_status_hint"
                                android:textColorHint="@color/grey_light"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="5dp"
                                android:layout_marginLeft="@dimen/margin_littile"
                                android:src="@drawable/down"/>


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/type_age"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/block_height"
                            android:layout_marginLeft="@dimen/margin_littile"
                            android:layout_marginRight="@dimen/margin_littile"
                            android:layout_marginTop="@dimen/margin_littile"
                            android:background="@drawable/round_corner_grey_border"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/margin_littile"
                            android:paddingRight="@dimen/margin_littile">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="箱龄"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_3"/>


                            <EditText
                                android:id="@+id/et_age"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_littile"
                                android:layout_weight="1"
                                android:background="@color/transparent"
                                android:gravity="right"
                                android:text=""
                                android:hint="请输入箱子生产年份"
                                android:maxLength="4"
                                android:maxLines="1"
                                android:inputType="number"
                                android:textColorHint="@color/grey_light"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="年"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_3"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/num"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/block_height"
                            android:layout_marginLeft="@dimen/margin_littile"
                            android:layout_marginRight="@dimen/margin_littile"
                            android:layout_marginTop="@dimen/margin_littile"
                            android:background="@drawable/round_corner_grey_border"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/margin_littile"
                            android:paddingRight="@dimen/margin_littile">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sendbuyinfo_num"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_3"/>

                            <EditText
                                android:id="@+id/number"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_littile"
                                android:layout_weight="1"
                                android:background="@color/transparent"
                                android:gravity="right"
                                android:hint="请输入数量"
                                android:maxLength="2"
                                android:inputType="number"
                                android:textColorHint="@color/grey_light"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="@dimen/margin_littile"
                            android:layout_marginTop="5dp"
                            android:text="@string/sendbuyinfo_num_tip"
                            android:textColor="@color/grey_deep"
                            android:textSize="@dimen/text_1"/>

                        <com.bm.container.view.MultipleRadioGroup
                            android:id="@+id/sale_or_bid"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/block_height"
                            android:layout_marginLeft="@dimen/margin_littile"
                            android:layout_marginRight="@dimen/margin_littile"
                            android:layout_marginTop="@dimen/margin_littile"
                            android:background="@drawable/round_corner_grey_border"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/margin_littile"
                            android:paddingRight="@dimen/margin_littile">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_littile"
                                android:text="交易类型"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_3" />

                            <RadioButton
                                android:id="@+id/sale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:button="@drawable/checkbox_circle"
                                android:checked="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_littile"
                                android:text="出售"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3" />

                            <RadioButton
                                android:id="@+id/bid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:button="@drawable/checkbox_circle" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="投标"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3" />

                        </com.bm.container.view.MultipleRadioGroup>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="@dimen/margin_littile"
                            android:layout_marginTop="5dp"
                            android:text="注：请在投标时间内选择买家，过期此卖箱信息将自动下架"
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="@dimen/margin_littile"
                            android:layout_marginTop="5dp"
                            android:text="@string/sendbuyinfo_tip"
                            android:textColor="@color/grey_deep"
                            android:textSize="@dimen/text_1"
                            android:visibility="gone"/>

                        <LinearLayout
                            android:id="@+id/money"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/block_height"
                            android:layout_marginLeft="@dimen/margin_littile"
                            android:layout_marginRight="@dimen/margin_littile"
                            android:layout_marginTop="@dimen/margin_littile"
                            android:background="@drawable/round_corner_grey_border"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/margin_littile"
                            android:paddingRight="@dimen/margin_littile">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sendsaleinfo_money"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_3"/>

                            <EditText
                                android:id="@+id/money_input"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_littile"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@color/transparent"
                                android:enabled="true"
                                android:gravity="right"
                                android:hint="若能提供发票，请输入含税金额"
                                android:maxLength="7"
                                android:inputType="number"
                                android:textColorHint="@color/grey_light"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_2"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sendsaleinfo_money_hint_"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_3"/>


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/time"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/block_height"
                            android:layout_marginLeft="@dimen/margin_littile"
                            android:layout_marginRight="@dimen/margin_littile"
                            android:layout_marginTop="@dimen/margin_littile"
                            android:background="@drawable/round_corner_grey_border"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/margin_littile"
                            android:paddingRight="@dimen/margin_littile">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sendsaleinfo_time"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_3"/>

                            <TextView
                                android:id="@+id/time_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_littile"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="@string/sendsaleinfo_time_hint"
                                android:textColorHint="@color/grey_light"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="5dp"
                                android:layout_marginLeft="@dimen/margin_littile"
                                android:src="@drawable/down"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_low_price"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/block_height"
                            android:layout_marginLeft="@dimen/margin_littile"
                            android:layout_marginRight="@dimen/margin_littile"
                            android:layout_marginTop="@dimen/margin_littile"
                            android:background="@drawable/round_corner_grey_border"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/margin_littile"
                            android:paddingRight="@dimen/margin_littile">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="起拍价"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_3"/>

                            <EditText
                                android:id="@+id/edit_low_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_littile"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:background="@color/transparent"
                                android:enabled="true"
                                android:gravity="right"
                                android:hint="若能提供发票，请输入含税金额"
                                android:maxLength="7"
                                android:inputType="number"
                                android:textColorHint="@color/grey_light"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sendsaleinfo_money_hint"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_3"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_littile"
                            android:layout_marginRight="@dimen/margin_littile"
                            android:layout_marginTop="@dimen/margin_littile"
                            android:background="@drawable/round_corner_grey_border"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/margin_littile"
                            android:paddingRight="@dimen/margin_littile">

                            <com.bm.container.view.MultipleRadioGroup
                                android:id="@+id/special_check"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/block_height"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/margin_littile"
                                    android:text="@string/sendsaleinfo_requre"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_3" />

                                <RadioButton
                                    android:id="@+id/special_check_left"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:button="@drawable/checkbox_circle"
                                    android:checked="true" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/margin_littile"
                                    android:text="@string/sendsaleinfo_requre2"
                                    android:textColor="@color/grey_deep"
                                    android:textSize="@dimen/text_3" />

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:button="@drawable/checkbox_circle" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:text="@string/sendsaleinfo_requre1"
                                    android:textColor="@color/grey_deep"
                                    android:textSize="@dimen/text_3" />

                            </com.bm.container.view.MultipleRadioGroup>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/round_corner_grey_bg">

                                <EditText
                                    android:id="@+id/input_money"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toLeftOf="@+id/textViewpic_two"
                                    android:background="@color/transparent"
                                    android:enabled="false"
                                    android:gravity="right"
                                    android:hint="请输入费用,特殊费用将另行收费"
                                    android:inputType="number"
                                    android:maxLength="7"
                                    android:padding="5dp"
                                    android:singleLine="true"
                                    android:textColorHint="@color/grey_light"
                                    android:textColor="@color/grey_deep"
                                    android:textSize="@dimen/text_3" />

                                <TextView
                                    android:id="@+id/textViewpic_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:paddingRight="8dp"
                                    android:text="@string/sendsaleinfo_money_hint"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_3" />

                            </RelativeLayout>

                            <!--<EditText
                                android:id="@+id/input_money"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="100dp"
                                android:background="@drawable/round_corner_grey_bg"
                                android:enabled="false"
                                android:gravity="right"
                                android:maxLength="7"
                                android:inputType="numberDecimal"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textColor="@color/grey_light"
                                android:textSize="@dimen/text_3"/>-->

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_littile"
                            android:layout_marginRight="@dimen/margin_littile"
                            android:layout_marginTop="@dimen/margin_littile"
                            android:background="@drawable/round_corner_grey_border"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/margin_littile"
                            android:paddingRight="@dimen/margin_littile">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="备注"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_3" />

                            <EditText
                                android:id="@+id/editRemarks"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:background="@color/white"
                                android:gravity="left|top"
                                android:hint="为了买家更好的了解信息，请备注好箱子的其他卖点，如箱子颜色、箱子的成新等"
                                android:maxLength="100"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="10dp"
                                android:textColorHint="@color/grey_light"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                        </LinearLayout>

