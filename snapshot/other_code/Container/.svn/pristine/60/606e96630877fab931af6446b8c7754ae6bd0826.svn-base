<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/topbar"
            layout="@layout/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.bigkoo.convenientbanner.ConvenientBanner
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/banner"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@drawable/banner1"
                            app:canLoop="true"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/orange_light"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/orange"
                                android:paddingBottom="5dp"
                                android:paddingLeft="@dimen/margin_littile"
                                android:paddingRight="@dimen/margin_littile"
                                android:paddingTop="5dp"
                                android:text="正在进行"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent"
                                android:paddingBottom="5dp"
                                android:paddingLeft="@dimen/margin_littile"
                                android:paddingRight="@dimen/margin_littile"
                                android:paddingTop="5dp"
                                android:text="10分10秒"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_1"/>


                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/block_height"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/margin_littile"
                        android:paddingRight="@dimen/margin_littile">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/location"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="国家.城市城市城市城市城市城市城市"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_2"/>


                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/see"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textColor="@color/grey_light"
                            android:textSize="@dimen/text_2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_people"
                            android:textColor="@color/grey_light"
                            android:textSize="@dimen/text_2"/>


                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/margin_littile"
                        android:layout_marginRight="@dimen/margin_littile"
                        android:background="@color/background"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_littile"
                        android:layout_marginRight="@dimen/margin_littile"
                        android:layout_marginTop="@dimen/margin_littile"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="@string/purchase_type"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="箱型"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_3"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="5dp">


                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="@string/purchase_status"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="状况"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_3"/>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="5dp">


                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="@string/purchase_sale_num"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="10个"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/text_3"/>


                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:layout_marginLeft="@dimen/margin_littile"
                        android:layout_marginRight="@dimen/margin_littile">


                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="特殊要求:"
                            android:textColor="@color/grey_deep"
                            android:textSize="@dimen/text_3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="有特殊费用"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_3"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:layout_marginLeft="@dimen/margin_littile"
                        android:layout_marginRight="@dimen/margin_littile">


                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="是否含发票:"
                            android:textColor="@color/grey_deep"
                            android:textSize="@dimen/text_3"
                            android:visibility="invisible"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="1000元"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_3"
                            android:background="@drawable/round_corner_grey_bg"
                            android:padding="5dp"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:layout_marginLeft="@dimen/margin_littile"
                        android:layout_marginRight="@dimen/margin_littile"
                        android:layout_marginBottom="@dimen/margin_littile">


                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="是否含发票:"
                            android:textColor="@color/grey_deep"
                            android:textSize="@dimen/text_3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="提供发票"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_3"/>


                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@color/background"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_littile">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/checkbox"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:button="@drawable/checkbox_square"
                                android:clickable="false"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/order_invoice"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                        </LinearLayout>


                        <com.bm.container.view.MultipleRadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <RadioButton
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="5dp"
                                android:button="@drawable/checkbox_circle"
                                android:checked="true"
                                android:clickable="false"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_littile"
                                android:text="@string/order_person"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                            <RadioButton
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="5dp"
                                android:button="@drawable/checkbox_circle"
                                android:clickable="false"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/order_company"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                        </com.bm.container.view.MultipleRadioGroup>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/round_corner_grey_border"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_littile">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/order_invoice_top"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_littile"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="right"
                                android:hint="请输入发票抬头"
                                android:singleLine="true"
                                android:textColor="@color/grey_deep"
                                android:textColorHint="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/round_corner_grey_border"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_littile">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/order_invoice_content"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                            <EditText
                                android:id="@+id/editText3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_littile"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="right"
                                android:hint="请输入发票内容"
                                android:singleLine="true"
                                android:textColor="@color/grey_deep"
                                android:textColorHint="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/round_corner_grey_border"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_littile">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/order_invoice_phone"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_littile"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="right"
                                android:hint="请输入收票人手机号"
                                android:singleLine="true"
                                android:textColor="@color/grey_deep"
                                android:textColorHint="@color/grey_deep"
                                android:textSize="@dimen/text_3"
                                android:inputType="number"/>

                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@color/background"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_littile">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/money_history"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_littile"
                            android:text="@string/purchase_history"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_3"/>

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_littile"
                            android:text="@string/purchase_tip2"
                            android:textColor="@color/grey_deep"
                            android:textSize="@dimen/text_1"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/margin_littile"
                        android:layout_marginRight="@dimen/margin_littile"
                        android:background="@color/background"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_littile">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="@string/purchase_item1"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_1"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="@string/purchase_item2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_1"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="@string/purchase_item3"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_1"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/purchase_item4"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_1"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/purchase_item5"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_1"/>

                    </LinearLayout>


                    <com.bm.container.view.ExtraListView
                        android:id="@+id/history_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_littile"
                        android:divider="@color/transparent"
                        android:dividerHeight="0dp"/>

                    <Button
                        android:id="@+id/sure"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/block_height"
                        android:layout_marginBottom="@dimen/margin_littile"
                        android:layout_marginLeft="@dimen/margin_littile"
                        android:layout_marginRight="@dimen/margin_littile"
                        android:layout_marginTop="@dimen/margin_littile"
                        android:background="@drawable/round_corner_blue_gb"
                        android:text="确认交易"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_5"/>

                </LinearLayout>


            </ScrollView>

        </android.support.v4.widget.SwipeRefreshLayout>


    </LinearLayout>


</layout>
