<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/topbar"
            layout="@layout/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/framlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.bm.container.view.PullDownView
                android:id="@+id/up"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_littile"
                            android:text="购买须知内容"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_3"/>

                    </LinearLayout>

                </ScrollView>


            </com.bm.container.view.PullDownView>


            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <com.bm.container.view.PullUpView
                    android:id="@+id/more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.bigkoo.convenientbanner.ConvenientBanner
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/banner"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:background="@drawable/banner1"
                                    app:canLoop="true"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/orange_light">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/orange"
                                        android:paddingBottom="5dp"
                                        android:paddingLeft="@dimen/margin_littile"
                                        android:paddingRight="@dimen/margin_littile"
                                        android:paddingTop="5dp"
                                        android:text="正在进行"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_1"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@color/transparent"
                                        android:paddingBottom="5dp"
                                        android:paddingLeft="@dimen/margin_littile"
                                        android:paddingRight="@dimen/margin_littile"
                                        android:paddingTop="5dp"
                                        android:text="10分10秒"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_1"/>


                                </LinearLayout>

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/block_height"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/margin_littile"
                                android:paddingRight="@dimen/margin_littile">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/location"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="国家.城市城市城市城市城市城市城市"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_2"/>


                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/see"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="100"
                                    android:textColor="@color/grey_light"
                                    android:textSize="@dimen/text_2"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/main_people"
                                    android:textColor="@color/grey_light"
                                    android:textSize="@dimen/text_2"/>


                            </LinearLayout>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="@dimen/margin_littile"
                                android:layout_marginRight="@dimen/margin_littile"
                                android:background="@color/background"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/margin_littile"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="@string/purchase_type"
                                        android:textColor="@color/grey_deep"
                                        android:textSize="@dimen/text_3"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:text="箱型"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_3"/>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="5dp">


                                    <TextView
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="@string/purchase_status"
                                        android:textColor="@color/grey_deep"
                                        android:textSize="@dimen/text_3"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:text="状况"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_3"/>


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="5dp">


                                    <TextView
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="@string/purchase_num"
                                        android:textColor="@color/grey_deep"
                                        android:textSize="@dimen/text_3"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:text="10个"
                                        android:textColor="@color/orange"
                                        android:textSize="@dimen/text_3"/>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="5dp">


                                    <TextView
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="@string/purchase_require"
                                        android:textColor="@color/grey_deep"
                                        android:textSize="@dimen/text_3"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_3"/>


                                </LinearLayout>


                            </LinearLayout>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:background="@color/background"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/margin_littile">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/money_history"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_littile"
                                    android:text="@string/purchase_history"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_3"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_littile"
                                    android:text="@string/purchase_tip2"
                                    android:textColor="@color/grey_deep"
                                    android:textSize="@dimen/text_1"/>

                            </LinearLayout>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="@dimen/margin_littile"
                                android:layout_marginRight="@dimen/margin_littile"
                                android:background="@color/background"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/margin_littile">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:text="@string/purchase_item1"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_1"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:text="@string/purchase_item2"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_1"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:text="@string/purchase_item3"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_1"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="@string/purchase_item4"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_1"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="@string/purchase_item5"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_1"/>

                            </LinearLayout>


                            <com.bm.container.view.ExtraListView
                                android:id="@+id/history_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_littile"
                                android:divider="@color/transparent"
                                android:dividerHeight="0dp"/>

                            <Button
                                android:id="@+id/sure"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/block_height"
                                android:layout_marginBottom="@dimen/margin_littile"
                                android:layout_marginLeft="@dimen/margin_littile"
                                android:layout_marginRight="@dimen/margin_littile"
                                android:layout_marginTop="@dimen/margin_littile"
                                android:background="@drawable/round_corner_blue_gb"
                                android:text="确认订单"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_5"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_1"
                                android:gravity="center"
                                android:text="继续拖动，查看购买须知"
                                android:background="@color/white"
                                android:paddingBottom="8dp"/>


                        </LinearLayout>


                    </ScrollView>

                </com.bm.container.view.PullUpView>
            </android.support.v4.widget.SwipeRefreshLayout>


        </FrameLayout>


    </LinearLayout>


</layout>
