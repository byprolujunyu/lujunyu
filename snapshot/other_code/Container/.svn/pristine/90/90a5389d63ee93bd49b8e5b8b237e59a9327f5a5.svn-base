<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_littile"
            android:background="@drawable/round_corner_white_bg"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_littile"
            android:layout_marginRight="@dimen/margin_littile">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="@dimen/margin_littile"
                android:layout_marginLeft="@dimen/margin_littile"
                android:layout_marginRight="@dimen/margin_littile"
                android:layout_marginTop="@dimen/margin_littile"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp">

                    <com.hongtian.easyroundimageview.EasyRoundImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/face"
                        app:hasLeftBottom="true"
                        app:hasLeftTop="true"
                        app:hasRightBottom="true"
                        app:hasRightTop="true"
                        app:radius="3dp"/>

                    <TextView
                        android:id="@+id/state"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/orange"
                        android:paddingBottom="5dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingTop="5dp"
                        android:text="投标进行中"
                        android:textColor="@color/white"
                        android:textSize="8dp"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_type"
                            android:textColor="@color/grey_deep"
                            android:textSize="@dimen/text_3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="分类名"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_3"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sbuyerinfo_amount"
                            android:textColor="@color/grey_deep"
                            android:textSize="@dimen/text_3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="1个"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/text_3"/>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/location"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="国家.城市城市城市城市城市城市城市"
                            android:textColor="@color/grey_light"
                            android:textSize="@dimen/text_2"/>


                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/see"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textColor="@color/grey_light"
                            android:textSize="@dimen/text_2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_people"
                            android:textColor="@color/grey_light"
                            android:textSize="@dimen/text_2"/>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_littile"
                android:layout_marginRight="@dimen/margin_littile"
                android:background="@color/background"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_littile"
                android:text="@string/market_tips_buy"
                android:textColor="@color/grey_light"
                android:textSize="@dimen/text_2"/>


        </LinearLayout>

    </LinearLayout>

</layout>