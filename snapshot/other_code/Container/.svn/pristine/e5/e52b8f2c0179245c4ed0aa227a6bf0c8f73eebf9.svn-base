<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_littile"
        android:layout_marginRight="@dimen/margin_littile"
        android:background="@drawable/round_corner_white_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_alert_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_alert_title_two"
            android:gravity="center"
            android:text="提示"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvHintContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:gravity="center"
            android:text="您的商品须填写发票信息,但该买家未填写！"
            android:textSize="14sp"
            android:textColor="#333333"/>



        <LinearLayout
            android:id="@+id/llHintContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1、请谨慎确认买家金额，订单确认后，我们会及时通知买家付款"
                android:textSize="14sp"
                android:textColor="#333333"/>
           <!-- <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="    时通知买家付款"
                android:textSize="14sp"
                android:textColor="#333333"/>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2、搜箱给与买家36小时付款账期"
                android:textSize="14sp"
                android:textColor="#333333"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3、若想有任何疑问，请关注搜箱公众号联系客服"
                android:textSize="14sp"
                android:textColor="#333333"/>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/invoiceLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发票类型:"
                    android:textSize="13sp"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="个人"
                    android:textSize="13sp"
                    android:textColor="#333333"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发票抬头:"
                    android:textSize="13sp"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/companyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="xxxx公司"
                    android:textSize="13sp"
                    android:textColor="#333333"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llinvoiceInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="纳税人识别号:"
                        android:textSize="13sp"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/identificationNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="36547915674646"
                        android:textSize="13sp"
                        android:textColor="#333333"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开户行名称:"
                        android:textSize="13sp"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/bankName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="xxxx支行"
                        android:textSize="13sp"
                        android:textColor="#333333"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开户行账号:"
                        android:textSize="13sp"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/bankNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="34654614694613615646131"
                        android:textSize="13sp"
                        android:textColor="#333333"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公司地址:"
                        android:textSize="13sp"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/companyAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="xxxxxxxxx"
                        android:textSize="13sp"
                        android:textColor="#333333"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公司电话:"
                        android:textSize="13sp"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/companyPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="465741564"
                        android:textSize="13sp"
                        android:textColor="#333333"/>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_alert_negative"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/alert_bt_lefit"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/text_3"/>


            <Button
                android:id="@+id/btn_alert_positive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/alert_bt_rgiht"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/text_3"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>