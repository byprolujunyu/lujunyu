<?xml version="1.0" encoding="utf-8"?>

                                                                   

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:tag="layout/activity_feedback_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <include
                android:id="@+id/topbar"
                layout="@layout/topbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:hint="@string/feedback_name_hint"
                            android:padding="@dimen/margin_littile"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey_deep"
                            android:textSize="@dimen/text_3"
                            android:visibility="gone"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/margin_littile"
                            android:layout_marginRight="@dimen/margin_littile"
                            android:background="@color/background"
                            android:visibility="gone"/>

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:hint="@string/feedback_phone_hint"
                            android:inputType="phone"
                            android:padding="@dimen/margin_littile"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey_deep"
                            android:textSize="@dimen/text_3"
                            android:visibility="gone"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/margin_littile"
                            android:layout_marginRight="@dimen/margin_littile"
                            android:background="@color/background"
                            android:visibility="gone"/>

                    <EditText
                            android:id="@+id/content"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@color/transparent"
                            android:gravity="left|top"
                            android:hint="@string/feedback_content_hint"
                            android:maxLength="150"
                            android:padding="@dimen/margin_littile"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey_deep"
                            android:textSize="@dimen/text_3"/>

                </LinearLayout>


                <Button
                        android:id="@+id/sure"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/block_height"
                        android:layout_marginLeft="@dimen/margin_littile"
                        android:layout_marginRight="@dimen/margin_littile"
                        android:layout_marginTop="@dimen/block_height"
                        android:background="@drawable/round_corner_blue_gb"
                        android:text="@string/feedback_submit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_5"/>

            </LinearLayout>

        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>

         