<?xml version="1.0" encoding="utf-8"?>

                                                                   

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:tag="layout/activity_login_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <include
                android:id="@+id/topbar"
                layout="@layout/topbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                <ImageView
                        android:layout_width="180dp"
                        android:layout_height="65dp"
                        android:layout_margin="40dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/logo"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/block_height"
                        android:layout_marginLeft="@dimen/margin_littile"
                        android:layout_marginRight="@dimen/margin_littile"
                        android:background="@drawable/round_corner_white_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/margin_littile"
                        android:paddingRight="@dimen/margin_littile">

                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/phone"/>

                    <EditText
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_littile"
                            android:layout_marginRight="40dp"
                            android:background="@color/transparent"
                            android:hint="@string/login_phone_hint"
                            android:inputType="phone"
                            android:lines="1"
                            android:maxLength="11"
                            android:textColor="@color/grey_deep"
                            android:textColorHint="@color/grey_light"
                            android:textSize="@dimen/text_3"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/block_height"
                        android:layout_marginLeft="@dimen/margin_littile"
                        android:layout_marginRight="@dimen/margin_littile"
                        android:layout_marginTop="@dimen/margin_littile"
                        android:background="@drawable/round_corner_white_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/margin_littile"
                        android:paddingRight="@dimen/margin_littile">

                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/pwd"/>

                    <EditText
                            android:id="@+id/pwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_littile"
                            android:layout_marginRight="40dp"
                            android:background="@color/transparent"
                            android:hint="@string/login_pwd_hint"
                            android:inputType="textPassword"
                            android:lines="1"
                            android:textColor="@color/grey_deep"
                            android:textColorHint="@color/grey_light"
                            android:textSize="@dimen/text_3"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <CheckBox
                            android:id="@+id/remember"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="5dp"
                            android:button="@drawable/checkbox_circle"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/login_remember_pwd"
                            android:textColor="@color/grey_deep"
                            android:textSize="@dimen/text_3"/>

                    <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>

                    <TextView
                            android:id="@+id/want_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_littile"
                            android:text="@string/login_want_logon"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/text_3"/>


                    <TextView
                            android:id="@+id/forget_pwd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/login_forget_pwd"
                            android:textColor="@color/grey_deep"
                            android:textSize="@dimen/text_3"/>

                </LinearLayout>

                <Button
                        android:id="@+id/login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/block_height"
                        android:layout_margin="@dimen/margin_littile"
                        android:background="@drawable/round_corner_blue_gb"
                        android:text="@string/login_login"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_5"/>


            </LinearLayout>

        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>
         