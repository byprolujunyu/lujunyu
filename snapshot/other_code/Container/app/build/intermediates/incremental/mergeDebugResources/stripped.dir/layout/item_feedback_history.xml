<?xml version="1.0" encoding="utf-8"?>

                                                            

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" android:tag="layout/item_feedback_history_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/margin_littile">

            <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="反馈内容"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_3"/>

            <TextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="2017.03.03 18:18:18"
                    android:textColor="@color/grey_deep"
                    android:textSize="@dimen/text_1"/>

        </LinearLayout>


        <LinearLayout
                android:id="@+id/model_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_littile"
                android:paddingRight="@dimen/margin_littile"
                android:paddingBottom="@dimen/margin_littile"
                android:visibility="gone">

            <TextView
                    android:id="@+id/content_reply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="反馈内容"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_3"/>

            <TextView
                    android:id="@+id/time_reply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="2017.03.03 18:18:18"
                    android:textColor="@color/grey_deep"
                    android:textSize="@dimen/text_1"/>

        </LinearLayout>


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_littile"
                android:layout_marginRight="@dimen/margin_littile"
                android:background="@color/background"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="8dp">

            <TextView
                    android:id="@+id/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corner_blue_border"
                    android:paddingBottom="4dp"
                    android:paddingLeft="@dimen/margin_littile"
                    android:paddingRight="@dimen/margin_littile"
                    android:paddingTop="4dp"
                    android:text="查看"
                    android:textColor="@color/colorPrimary"/>

        </RelativeLayout>


    </LinearLayout>

         