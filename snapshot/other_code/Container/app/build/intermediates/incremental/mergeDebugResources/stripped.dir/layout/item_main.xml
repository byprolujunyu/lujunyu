<?xml version="1.0" encoding="utf-8"?>

                                                            


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:tag="layout/item_main_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
                android:id="@+id/item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">


            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin_littile"
                    android:layout_marginRight="@dimen/margin_littile"
                    android:background="@color/background"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="@dimen/margin_littile"
                    android:layout_marginLeft="@dimen/margin_littile"
                    android:layout_marginRight="@dimen/margin_littile"
                    android:layout_marginTop="@dimen/margin_littile"
                    android:orientation="horizontal">

                <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp">

                    <com.hongtian.easyroundimageview.EasyRoundImageView
                            android:id="@+id/pic"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/face"
                            app:hasLeftBottom="true"
                            app:hasLeftTop="true"
                            app:hasRightBottom="true"
                            app:hasRightTop="true"
                            app:radius="3dp"/>

                    <TextView
                            android:id="@+id/status"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/red"
                            android:gravity="center"
                            android:hint="未知"
                            android:paddingBottom="5dp"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:paddingTop="5dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="8dp"/>

                </RelativeLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">


                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="标题:"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                        <TextView
                                android:id="@+id/titleName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:hint="--"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="@dimen/text_3"/>


                    </LinearLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:orientation="vertical">


                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="2dp"
                                    android:orientation="horizontal">


                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/main_type"
                                        android:textColor="@color/grey_deep"
                                        android:textSize="@dimen/text_3"/>

                                <TextView
                                        android:id="@+id/type"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:hint="未知"
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/black"
                                        android:textSize="@dimen/text_3"/>


                            </LinearLayout>


                            <LinearLayout
                                    android:id="@+id/ll_price_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="2dp">


                                <TextView
                                        android:id="@+id/name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/main_deel_money"
                                        android:textColor="@color/grey_deep"
                                        android:textSize="@dimen/text_3"/>

                                <TextView
                                        android:id="@+id/money"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:textColor="@color/orange"
                                        android:textColorHint="@color/orange"
                                        android:textSize="@dimen/text_3"/>

                                <TextView
                                        android:id="@+id/yuan"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/orange"
                                        android:textSize="@dimen/text_3"/>


                            </LinearLayout>


                        </LinearLayout>

                        <ImageView
                                android:id="@+id/iv_type"
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/user_work_state_lv3"/>

                    </RelativeLayout>


                    <LinearLayout
                            android:id="@+id/ll_value_sale_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:orientation="horizontal">


                        <TextView
                                android:id="@+id/name_sale_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="数量:"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                        <TextView
                                android:id="@+id/value_sale_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:hint="0个"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/text_3"/>

                    </LinearLayout>


                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/location"/>

                        <TextView
                                android:id="@+id/location"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:hint="未知"
                                android:singleLine="true"
                                android:textColor="@color/grey_light"
                                android:textColorHint="@color/grey_light"
                                android:textSize="@dimen/text_2"/>


                        <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/see"/>

                        <TextView
                                android:id="@+id/people"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="0"
                                android:textColor="@color/grey_light"
                                android:textColorHint="@color/grey_light"
                                android:textSize="@dimen/text_2"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_people"
                                android:textColor="@color/grey_light"
                                android:textSize="@dimen/text_2"/>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


         