<?xml version="1.0" encoding="utf-8"?>

                                                            


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:tag="layout/item_main_buy_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
                android:id="@+id/item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">


            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin_littile"
                    android:layout_marginRight="@dimen/margin_littile"
                    android:background="@color/background"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="@dimen/margin_littile"
                    android:layout_marginLeft="@dimen/margin_littile"
                    android:layout_marginRight="@dimen/margin_littile"
                    android:layout_marginTop="@dimen/margin_littile"
                    android:orientation="horizontal">

                <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp">

                    <com.hongtian.easyroundimageview.EasyRoundImageView
                            android:id="@+id/pic"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/face"
                            app:hasLeftBottom="true"
                            app:hasLeftTop="true"
                            app:hasRightBottom="true"
                            app:hasRightTop="true"
                            app:radius="3dp"/>

                    <TextView
                            android:id="@+id/status"
                            android:layout_width="65dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/label_dr"
                            android:paddingBottom="5dp"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:paddingTop="5dp"
                            android:textColor="@color/white"
                            android:textSize="8dp"
                            android:hint="未知"
                            android:textColorHint="@color/white"
                            android:gravity="center"/>

                </RelativeLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                    <LinearLayout
                            android:id="@+id/llTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="标题:"
                                android:textColor="@color/grey_deep"
                                android:textSize="@dimen/text_3"/>

                        <TextView
                                android:id="@+id/tvTitleName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:hint=""
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="@dimen/text_3"/>


                    </LinearLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:orientation="vertical">

                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="5dp">


                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/main_type"
                                        android:textColor="@color/grey_deep"
                                        android:textSize="@dimen/text_3"/>

                                <TextView
                                        android:id="@+id/type"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_3"
                                        android:hint="未知"
                                        android:textColorHint="@color/black"/>


                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="5dp">


                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="箱况:"
                                        android:textColor="@color/grey_deep"
                                        android:textSize="@dimen/text_3"/>

                                <TextView
                                        android:id="@+id/tv_status"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_2"
                                        android:text=""/>

                                <!--<TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="个"
                                    android:textColor="@color/orange"
                                    android:textSize="@dimen/text_3"/>-->


                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="5dp">


                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/main_deel_num"
                                        android:textColor="@color/grey_deep"
                                        android:textSize="@dimen/text_3"/>

                                <TextView
                                        android:id="@+id/num"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:textColor="@color/orange"
                                        android:hint="0"
                                        android:textColorHint="@color/orange"
                                        android:textSize="@dimen/text_3"/>

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="个"
                                        android:textColor="@color/orange"
                                        android:textSize="@dimen/text_3"/>


                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                                android:id="@+id/iv_type"
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/user_work_state_lv4"/>

                    </RelativeLayout>


                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/location"/>

                        <TextView
                                android:id="@+id/location"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/grey_light"
                                android:textSize="@dimen/text_2"
                                android:hint="未知"
                                android:textColorHint="@color/grey_light"/>


                        <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/see"/>

                        <TextView
                                android:id="@+id/people"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/grey_light"
                                android:textSize="@dimen/text_2"
                                android:hint="0"
                                android:textColorHint="@color/grey_light"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_people"
                                android:textColor="@color/grey_light"
                                android:textSize="@dimen/text_2"/>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


         