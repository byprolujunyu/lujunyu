<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:tag="layout/item_saler_order_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/background"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/margin_littile">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/myorder_orderid"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_2"/>

            <TextView
                    android:id="@+id/tvOrderCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="29480932849"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_2"/>

            <TextView
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已付款"
                    android:textColor="@color/yifukuan"
                    android:textSize="@dimen/text_2"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="@dimen/margin_littile"
                android:layout_marginLeft="@dimen/margin_littile"
                android:layout_marginRight="@dimen/margin_littile"
                android:layout_marginTop="@dimen/margin_littile"
                android:orientation="horizontal">


            <com.hongtian.easyroundimageview.EasyRoundImageView
                    android:id="@+id/pic"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic_default"
                    app:hasLeftBottom="true"
                    app:hasLeftTop="true"
                    app:hasRightBottom="true"
                    app:hasRightTop="true"
                    app:radius="3dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tvTitleName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_3"/>

                <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="40RH冷藏集装箱"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_3"/>

                <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="报价金额:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_3"/>

                <TextView
                        android:id="@+id/count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="数量:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_3"/>

                <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/location"
                        android:ellipsize="end"
                        android:hint="未知"
                        android:singleLine="true"
                        android:textColor="@color/grey_light"
                        android:textColorHint="@color/grey_light"
                        android:textSize="@dimen/text_2"/>

            </LinearLayout>


        </LinearLayout>

        <TextView
                android:id="@+id/tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_littile"
                android:layout_marginRight="@dimen/margin_littile"
                android:layout_marginBottom="5dp"
                android:text="@string/order_tip2"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_1"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/margin_littile">

            <TextView
                    android:id="@+id/tvHintIsShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="费用已结算"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_3"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/myorder_total"
                    android:textColor="@color/grey_deep"
                    android:textSize="@dimen/text_2"/>

            <TextView
                    android:id="@+id/piece"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="10"
                    android:textColor="@color/grey_deep"
                    android:textSize="@dimen/text_2"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/myorder_unit"
                    android:textColor="@color/grey_deep"
                    android:textSize="@dimen/text_2"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_littile"
                    android:text="@string/myorder_cunt"
                    android:textColor="@color/grey_deep"
                    android:textSize="@dimen/text_2"/>

            <TextView
                    android:id="@+id/tvAggregatePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="10000元"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_3"/>


        </LinearLayout>

        <LinearLayout
                android:id="@+id/model_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/block_height"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

            <TextView
                    android:id="@+id/left_button"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_littile"
                    android:background="@drawable/round_corner_blue_border"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingLeft="@dimen/margin_littile"
                    android:paddingRight="@dimen/margin_littile"
                    android:paddingTop="8dp"
                    android:text="查看提货单"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_3"/>


            <TextView
                    android:id="@+id/right_button"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_littile"
                    android:background="@drawable/round_corner_blue_border"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingLeft="@dimen/margin_littile"
                    android:paddingRight="@dimen/margin_littile"
                    android:paddingTop="8dp"
                    android:text="填写提货单"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_3"/>

        </LinearLayout>

    </LinearLayout>
         