<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_littile"
            android:layout_marginRight="@dimen/margin_littile"
            android:background="@drawable/round_corner_white_bg"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_alert_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_alert_title"
                android:gravity="center"
                android:text="提示"
                android:textColor="@color/white"
                android:textSize="@dimen/text_3"/>

        <TextView
                android:id="@+id/tv_alert_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="多个箱号用逗号隔开"
                android:textColor="@color/grey_deep"
                android:textSize="@dimen/text_1"/>

        <EditText
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/margin_littile"
                android:layout_marginLeft="@dimen/margin_littile"
                android:layout_marginRight="@dimen/margin_littile"
                android:background="@drawable/round_corner_grey_border"
                android:padding="5dp"
                android:textSize="@dimen/text_3"
                android:textColor="@color/black"
                android:singleLine="true"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btn_alert_negative"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="取消"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_3"/>

            <View
                    android:id="@+id/v_btnline"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/background"/>

            <Button
                    android:id="@+id/btn_alert_positive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="发送"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_3"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>