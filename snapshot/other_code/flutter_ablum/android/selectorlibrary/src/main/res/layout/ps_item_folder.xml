<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="@dimen/ps_spacing_small"
              android:paddingRight="@dimen/ps_spacing_small"
              android:paddingTop="@dimen/ps_spacing_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <net.arvin.selector.uis.views.FolderBackGroundLayout
            android:id="@+id/ps_layout_img"
            android:layout_width="@dimen/ps_spacing_eighty"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ps_spacing_small">

            <ImageView
                android:id="@+id/ps_img_first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ps_img_loading"/>
        </net.arvin.selector.uis.views.FolderBackGroundLayout>

        <TextView
            android:id="@+id/ps_tv_folder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ps_layout_img"
            android:text="name"
            android:textColor="@color/ps_black_normal"
            android:textSize="@dimen/ps_txt_big_content"/>

        <TextView
            android:id="@+id/ps_tv_folder_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ps_tv_folder_name"
            android:layout_marginTop="@dimen/ps_spacing_small"
            android:layout_toRightOf="@id/ps_layout_img"
            android:text="1"
            android:textColor="@color/ps_black_secondary"
            android:textSize="@dimen/ps_txt_normal_content"/>

        <ImageView
            android:id="@+id/ps_img_selector"
            android:layout_width="@dimen/ps_spacing_twenty_four"
            android:layout_height="@dimen/ps_spacing_twenty_four"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ps_checked"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ps_spacing_divider"
        android:layout_marginTop="@dimen/ps_spacing_small"
        android:background="@color/ps_black_divider"/>

</LinearLayout>