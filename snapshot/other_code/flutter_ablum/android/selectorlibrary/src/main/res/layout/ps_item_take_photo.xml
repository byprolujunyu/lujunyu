<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/ps_colorPrimary">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/is_item_img"
            android:layout_width="@dimen/ps_spacing_tab_bar"
            android:layout_height="@dimen/ps_spacing_tab_bar"
            android:scaleType="centerCrop"
            android:src="@drawable/ps_img_take_photo"/>

        <TextView
            android:id="@+id/is_take_photo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ps_spacing_small"
            android:text="拍摄照片"
            android:textColor="#E1E1E1"
            android:textSize="@dimen/ps_txt_normal_content"/>
    </LinearLayout>
</FrameLayout>
